{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "outDir": "out/types",
    "paths": {
      "@shared/*": ["./shared/*"],
      "@core/*": ["./core/*"]
    }
  },
  "include": [
    "electron/**/*.ts",
    "core/**/*.ts",
    "core/**/*.json",
    "shared/**/*.ts",
    "electron.vite.config.ts"
  ]
}
